{
  "name": "vscode-text-utils",
  "displayName": "VS Code Text Utils",
  "description": "A Visual Studio Code extension for text utilities, including JSON minification.",
  "version": "0.0.1",
  "publisher": "david-j-lee",
  "icon": "./icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/david-j-lee/vscode-text-utils"
  },
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-text-utils.minifyJsonSelection",
        "title": "Text Utils: Minify JSON Selection"
      },
      {
        "command": "vscode-text-utils.encodeBase64Selection",
        "title": "Text Utils: Encode Base64 Selection"
      },
      {
        "command": "vscode-text-utils.decodeBase64Selection",
        "title": "Text Utils: Decode Base64 Selection"
      },
      {
        "command": "vscode-text-utils.hashMd5Selection",
        "title": "Text Utils: Hash MD5 Selection"
      },
      {
        "command": "vscode-text-utils.hashSha1Selection",
        "title": "Text Utils: Hash SHA-1 Selection"
      },
      {
        "command": "vscode-text-utils.hashSha256Selection",
        "title": "Text Utils: Hash SHA-256 Selection"
      },
      {
        "command": "vscode-text-utils.generateUuidV4",
        "title": "Text Utils: Generate UUID v4"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "lint": "npm run lint:ts && npm run lint:eslint && npm run lint:format",
    "lint:ts": "tsc --noEmit -p ./tsconfig.json",
    "lint:eslint": "eslint src",
    "lint:format": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
